<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/sendsmsbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SEND GROUP SMS"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginLeft="@dimen/centerbuttonmargin"
        android:layout_marginRight="@dimen/centerbuttonmargin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/sendsmsbuttontextcolor" />

    <Button
        android:id="@+id/addcontactbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
       android:layout_marginTop="@dimen/centerbuttonmargin"
        android:textSize="25sp"
        android:layout_marginRight="170sp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:background="@color/colorAccent"
        android:hint="ADD CONTACT"
        android:paddingStart="@dimen/activity_horizontal_margin"
       />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/singlegrouplist"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/colorPrimaryDark"
        >


    </ListView>
</LinearLayout>